<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>Server Example</display-name>

	<servlet>
		<servlet-name>user</servlet-name>
		<servlet-class>com.netease.server.example.web.controller.UserServlet</servlet-class>
		<init-param>
			<param-name>tomcat</param-name>
			<param-value>test for init-param</param-value>
		</init-param>
		<load-on-startup>0</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>user</servlet-name>
		<url-pattern>/user/specify</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>allUser</servlet-name>
		<servlet-class>com.netease.server.example.web.controller.AllServlet</servlet-class>
		<init-param>
			<param-name>tomcat</param-name>
			<param-value>test for init-param</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>allUser</servlet-name>
		<url-pattern>/user/*</url-pattern>
	</servlet-mapping>


	<filter>
		<filter-name>Set UTF-8</filter-name>
		<filter-class>com.netease.server.example.web.controller.filter.EncodingFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>Set UTF-8</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>RequestIdFilter</filter-name>
		<filter-class>com.netease.server.example.web.controller.filter.RequestIdFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>RequestIdFilter</filter-name>
		<url-pattern>/user/*</url-pattern>
	</filter-mapping>

	<listener>
		<listener-class>com.netease.server.example.web.controller.listener.TestListener</listener-class>
	</listener>

	<error-page>
		<error-code>404</error-code>
		<location>/error.html</location>
	</error-page>
</web-app>
